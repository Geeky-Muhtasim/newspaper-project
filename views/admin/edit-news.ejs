<h1>Edit News</h1>
<form action="/admin/news/edit/<%= news.id %>" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= news.title %>" required>
    
    <label for="content">Content:</label>
    <textarea id="content" name="content" required><%= news.content %></textarea>
    
    <label for="category_id">Category:</label>
    <select id="category_id" name="category_id" required>
        <% categories.forEach((category) => { %>
            <option value="<%= category.id %>" <%= news.category_id === category.id ? 'selected' : '' %>><%= category.name %></option>
        <% }); %>
    </select>

    <label for="image">Image:</label>
    <% if (news.image_url) { %>
        <img src="<%= news.image_url %>" alt="News Image" width="100">
    <% } %>
    <input type="file" id="image" name="image" accept="image/*">

    <button type="submit">Save Changes</button>
</form>
