<h1>Manage Users</h1>
<a href="/admin/users/add">Add User</a>
<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach((user) => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.role %></td>
                <td>
                    <a href="/admin/users/edit/<%= user.id %>">Edit</a>
                    <a href="/admin/users/delete/<%= user.id %>">Delete</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
