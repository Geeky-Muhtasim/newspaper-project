<section>
  <h2>Latest News</h2>
  <% if (news && news.length > 0) { %>
    <div class="news-list">
      <% news.forEach((article) => { %>
        <div class="news-item">
          <h3><a href="/news/<%= article.id %>"><%= article.title %></a></h3>
          <p><strong>Category:</strong> <%= article.category_name %></p>
          <p><%= article.content.slice(0, 100) %>...</p> <!-- Show a short preview -->
          <a href="/news/<%= article.id %>">Read more</a>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p>No news available at the moment.</p>
  <% } %>
</section>
